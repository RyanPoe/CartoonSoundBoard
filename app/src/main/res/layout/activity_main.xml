<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.cartoonsoundboard.MainActivity">
    //images are 500px X 500px

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/wreckitralph"
            android:scaleType="centerCrop"
            android:onClick="playLorax"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/shrek"
            android:scaleType="centerCrop"
            android:onClick="playShrek"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/beemovie2"
            android:scaleType="centerCrop"
            android:onClick="playBee"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/wreckitralph"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout >
